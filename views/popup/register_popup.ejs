<section class="register_layer popup_layer" style="display: none;">
        <div class="popup_container">
            <header>
                <img src="img/logo.png" alt="logo_img">
                <button class="icon_button button " type="button" onclick="ShowRegisterPopup()"><svg aria-hidden="true"
                        id="icon_times" xmlns="http://www.w3.org/2000/svg" width="16" viewBox="0 0 320 512">
                        <path
                            d="M207.6 256l107.72-107.72c6.23-6.23 6.23-16.34 0-22.58l-25.03-25.03c-6.23-6.23-16.34-6.23-22.58 0L160 208.4 52.28 100.68c-6.23-6.23-16.34-6.23-22.58 0L4.68 125.7c-6.23 6.23-6.23 16.34 0 22.58L112.4 256 4.68 363.72c-6.23 6.23-6.23 16.34 0 22.58l25.03 25.03c6.23 6.23 16.34 6.23 22.58 0L160 303.6l107.72 107.72c6.23 6.23 16.34 6.23 22.58 0l25.03-25.03c6.23-6.23 6.23-16.34 0-22.58L207.6 256z">
                        </path>
                        <title>닫기</title>
                    </svg></button>
            </header>
    
            <div class="popup_cont">
                <form class="main_form">
                    <label class="atom_field">
                      <h1 class="tit">Register In</h1>
                    </label>
                    <label class="atom_field">
                        <span class="label ir-pm">아이디</span>
                        <input id="id1" class="input email" type="email" autofocus="true" placeholder="아이디">
                    </label>
                    <label class="atom_field">
                        <span class="label ir-pm">비밀번호</span>
                        <input id="password1" class="input password" type="password" autofocus="true" placeholder="비밀번호">
                    </label>
                    <label class="atom_field">
                        <span class="label ir-pm">비밀번호</span>
                        <input id="password2" class="input password" type="password" autofocus="true" placeholder="비밀번호 확인">
                    </label>
                    <button class="atom_button button signin" type="button" onclick=signup()>
                        회원가입
                    </button>
                </form>
            </div>
        </div>
        <script>
            function signup(){
                var id = document.getElementById("id1").value;
                var password1 = document.getElementById("password1").value;
                var password2 = document.getElementById("password2").value;
                if(password1==password2){
                    $.post(
                        "/detail/signup",
                        { params: { id: id, password: password1 } },
                        function (data) {
                            alert(data.string);
                            location.reload();
                        }
                    )
                }
                else{
                    alert("비밀번호가 일치하지 않습니다.")
                }
            }
        </script>